---
layout: layouts/base.njk
section: post
---

<article>
  <h1>{{ title }}</h1>
  <span>
    <small>
      <time datetime="{{ page.date | machineDate }}">{{ page.date | readableDate }}</time>
    </small>
  </span>

  {{ layoutContent | safe }}

  {% if tags %}
   <span><small>tags:</small></span>
    <span>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </span>
  {% endif %}

</article>

<nav>
  <a href="{{ '/writing/' | url }}">‚Üê Writing</a>
</nav>
