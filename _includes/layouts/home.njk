---
layout: layouts/base.njk
section: home
---

<section class="recent">
  <div class="greeting">
    <h1>{{ layoutContent | safe }}</h1>
  </div>

<ul>
{%- for post in collections.post | reverse -%}
  {% if loop.index0 < 5 %}
  <li>
    <article{% if post.url == url %} data-current="current item"{% endif %} >
			<span>
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }}</small>
				</time>
			</span>
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
    <p>{{ post.data.content | excerpt }}&nbsp;</p>
			</div>
		</article>
    </li>
  {% endif %}
{%- endfor -%}
</ul>