---
layout: layouts/base.njk
section: home
---

<section class="recent">
  <div class="greeting">
      <picture>
      <img
      sizes="(max-width: 600px) 100vw, 600px"
      srcset="/static/img/samkap,w_190.jpg 190w,
      /static/img/samkap,w_317.jpg 317w,
      /static/img/samkap,w_416.jpg 416w,
      /static/img/samkap,w_508.jpg 508w,
      /static/img/samkap,w_584.jpg 584w,
      /static/img/samkap,w_600.jpg 600w"
      src="img/samkap,w_600.jpg"
      alt="It's me, Sam!">
    </picture>
<h1>{{ layoutContent | safe }}</h1>
  </div>

<ul>
{%- for post in collections.post | reverse -%}
  {% if loop.index0 < 5 %}
  <li>
    <article{% if post.url == url %} data-current="current item"{% endif %} >
			<span>
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }}</small>
				</time>
			</span>
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
    <p>{{ post.data.content | excerpt }}&nbsp;</p>
			</div>
		</article>
    </li>
  {% endif %}
{%- endfor -%}
</ul>